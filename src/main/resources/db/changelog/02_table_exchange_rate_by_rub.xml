<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="Create and fill table exchange_rate_by_rub" author="Aleksey Zhdanov">
        <createTable tableName="exchange_rate_by_rub" remarks="Обменный курс по отношению к рублю">
            <column name="id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="exchange_rate_by_rub_pk"/>
            </column>
            <column name="date" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="numeric">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addColumn tableName="exchange_rate_by_rub">
            <column name="currency_id" type="integer"/>
        </addColumn>

        <addForeignKeyConstraint baseTableName="exchange_rate_by_rub"
                                 baseColumnNames="currency_id"
                                 referencedTableName="currency"
                                 referencedColumnNames="id"
                                 constraintName="exchange_rate_by_rub_currency_fk"/>

        <insert tableName="exchange_rate_by_rub">
            <column name="date" value="now()"/>
            <column name="value" value="1"/>
            <column name="currency_id" valueComputed="(SELECT id FROM currency WHERE name = 'Российский рубль')"/>
        </insert>
    </changeSet>

</databaseChangeLog>
