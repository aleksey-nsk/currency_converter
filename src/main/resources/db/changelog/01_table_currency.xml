<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">

    <changeSet id="Create and fill table currency" author="Aleksey Zhdanov">
        <createTable tableName="currency" remarks="Валюта">
            <column name="id" type="integer" autoIncrement="true">
                <constraints nullable="false" primaryKey="true" primaryKeyName="currency_pk"/>
            </column>
            <column name="id_cb" type="varchar(40)" remarks="Идентификатор ЦБ"/>
            <column name="num_code" type="integer"/>
            <column name="char_code" type="varchar(40)">
                <constraints nullable="false"/>
            </column>
            <column name="nominal" type="integer">
                <constraints nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="currency">
            <column name="char_code" value="RUB"/>
            <column name="nominal" value="1"/>
            <column name="name" value="Российский рубль"/>
        </insert>
    </changeSet>

</databaseChangeLog>
